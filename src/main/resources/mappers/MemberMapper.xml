<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTO Mapper 3.0//EN"
        "thhp://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.fullstack4.lccbook.mapper.MemberMapper">
    <insert id="join">
        insert into tbl_member(user_id,pwd,name,email,brithday,interest,addr1,addr2)
        values (#{user_id},#{pwd},#{name},#{email},#{brithday},#{interest},#{addr1},#{addr2})
    </insert>

    <select id="view" resultType="org.fullstack4.lccbook.domain.MemberVO">
        select user_id,pwd,name,email,interest,jumin,addr1,addr2,brithday,job_code,mileage,user_state,reg_date,leave_date,pwd_change_date
        from tbl_member
        where user_id=#{user_id}
    </select>

    <update id="modify">
        update tbl_member
        set pwd = #{pwd},
        name = #{name},
        email = #{email},
        brithday = #{brithday},
        interest = #{interest},
        addr1 = #{addr1},
        addr2 = #{addr2}
        where user_id=#{user_id}
    </update>

    <delete id="delete">
        delete
        from tbl_member
        where user_id=#{user_id}
    </delete>

    <select id="idCheck">
        select count(*)
        from tbl_member
        where user_id=#{user_id}
    </select>


</mapper>